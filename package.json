{
	"name": "procon-tools",
	"displayName": "procon-tools",
	"description": "Procon-tools supports you in competitive programming using online judges.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:procon-tools.contest",
		"onCommand:procon-tools.login"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "procon-tools.contest",
				"title": "Start contest"
			},
			{
				"command": "procon-tools.test",
				"title": "â–· Run tests"
			},
			{
				"command": "procon-tools.login",
				"title": "Login"
			},
			{
				"command": "procon-tools.submit",
				"title": "Submit code"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "procon-tools.test",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"type": "obhect",
			"title": "Procon Tools",
			"properties": {
				"procon-tools.home": {
					"type": "string",
					"default": "~/contests",
					"description": "Set a working directory for contests. The default is \"~/contests\"."
				},
				"procon-tools.language": {
					"type": "string",
					"enum": [
						"C++",
						"Go"
					],
					"default": "C++",
					"description": "Set a language of automatically generated source files."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-plugin-prettier": "^3.1.3",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"prettier": "^2.0.4",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"cheerio-httpcli": "^0.7.4"
	}
}
